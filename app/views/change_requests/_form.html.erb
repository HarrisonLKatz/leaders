<%= form_with(model: change_request, url: subdomain_change_requests_path) do |form| %>
  <% if change_request.errors.any? %>
    <p><%= pluralize(change_request.errors.count, 'error') %> prohibited this change_request from being saved:</p>
    <ul>
      <% change_request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form.hidden_field :subdomain_id, value: @subdomain.id %>
  <%= form.hidden_field :user_id, value: change_request.user_id %>

  <div class="field">
    <%= form.label :value %>
    <%= form.text_field :value, value: change_request.value %>
  </div>

  <div class="field">
    <%= form.label :record_type %>
    <%= form.select :record_type, ChangeRequest.record_types.keys, value: change_request.record_type %>
  </div>

  <div class="actions">
    <%= form.submit value: 'Create' %>
  </div>
<% end %>

<% unless change_request[:id].nil? %>
  <%= form_with(model: change_request, url: subdomain_change_request_path(@subdomain, change_request), method: :delete) do |form| %>
    <div class="actions">
      <%= form.hidden_field :id, value: change_request[:id] %>
      <%= form.submit value: 'Destroy' %>
    </div>
  <% end %>
<% end %>
