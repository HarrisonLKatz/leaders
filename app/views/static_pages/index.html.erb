<main class="w-100 mx-auto center max-width-4 pt3">
  <h1 class="w-100">Welcome!</h1>
  <% if signed_in? %>
    <% if @clubs.any? %>
      <ul class="list left-align w-100">
        <% @clubs.each do |club| %>
          <%= link_to club_path(club[:high_school_name].gsub(' ', '-')) do %>
            <li>
              <strong><%= club[:high_school_name] %></strong>
            </li>
          <% end %>
        <% end %>
      </ul>
    <% else %>
      <p class="slate h3 bold mb4">No clubs found.</p>
    <% end %>
    <% if admin_signed_in? %>
      <h2 class="w-100">Grand Central Station of <span class="primary">Leaders</span></h2>
      <ul class="list left-align w-100">
        <li>letâ€™s build stuff</li>
      </ul>
    <% end %>
    <%= link_to 'Sign out', logout_users_path, method: :delete, class: 'btn mt2' %>
  <% else %>
    <%= link_to 'Sign in', auth_users_path, class: 'btn h2' %>
  <% end %>
</main>
